node_modules/

# Logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# OS files
.DS_Store
Thumbs.db

# ============================
# Backend - Laravel (/backend)
# ============================

/backend/vendor/
/backend/node_modules/

# Laravel cache and compiled files
/backend/bootstrap/cache/
/backend/storage/*.key
/backend/storage/debugbar/
/backend/storage/framework/cache/data/
/backend/storage/framework/sessions/
/backend/storage/framework/views/
/backend/storage/logs/
/backend/storage/app/public/

# Laravel IDE helper files (optional)
_backend/_ide_helper.php
_backend/_ide_helper_models.php

# PHPUnit result cache
/backend/.phpunit.result.cache

# Env files (usually ignored)
/backend/.env
/backend/.env.local
/backend/.env.*.backup

# Composer files (do NOT ignore composer.lock if you want consistent dependencies)
/backend/composer.phar

# Ignore compiled Blade templates
/backend/storage/framework/views/*

# Ignore Laravel Mix manifest and hot reload files if you use Mix
/backend/public/mix-manifest.json
/backend/public/hot

# Ignore storage of npm/yarn artifacts if used in backend
/backend/node_modules/

